# ============================================
# Calo Security Posture Assessment Platform
# Environment Configuration
# ============================================

# Node Environment
NODE_ENV=development

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_USER=calo
POSTGRES_PASSWORD=calo_secret_change_me
POSTGRES_DB=calo_db
DATABASE_URL=postgresql://calo:calo_secret_change_me@localhost:5432/calo_db?schema=public

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# MinIO (S3-compatible storage)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123_change_me
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123_change_me
MINIO_USE_SSL=false

# ============================================
# Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-chars
JWT_EXPIRATION=1d
NEXTAUTH_SECRET=your-nextauth-secret-must-be-at-least-32-chars
NEXTAUTH_URL=http://localhost:3000

# ============================================
# API Configuration
# ============================================
API_PORT=4000
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# Tool Execution Safety Limits
# IMPORTANT: These limits are security controls
# ============================================
# Minimum delay between requests (milliseconds)
TOOL_RATE_LIMIT_MS=1000
# Maximum concurrent tool executions
TOOL_MAX_CONCURRENT=2
# Maximum requests per single tool run
TOOL_MAX_REQUESTS_PER_RUN=50
# Tool execution timeout (milliseconds)
TOOL_TIMEOUT_MS=30000

# ============================================
# Optional: ClamAV Integration
# ============================================
CLAMAV_HOST=clamav
CLAMAV_PORT=3310
ENABLE_VIRUS_SCAN=false
